<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <style name="CarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
	    <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBar</item>
	    <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="android:actionDropDownStyle" tools:targetApi="11">@style/DropDownNav</item>
        <!--<item name="android:actionBarWidgetTheme" tools:targetApi="14">@style/App.actionBarWidgetTheme</item>-->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>
        <!--<item name="actionBarWidgetTheme">@style/App.actionBarWidgetTheme</item>-->
    </style>

    <style name="App.actionBarWidgetTheme" parent="@style/Theme.AppCompat">
        <item name="android:spinnerDropDownItemStyle">@style/App.Widget.DropDownItem.Spinner</item>
        <item name="spinnerDropDownItemStyle">@style/App.Widget.DropDownItem.Spinner</item>
    </style>


	<!-- general styles for the action bar -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
	    <item name="android:background">#f3822c</item>
	    <item name="android:icon">@drawable/alogo</item>
	    <item name="android:titleTextStyle" tools:targetApi="11">@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse</item>
	    <item name="android:subtitleTextStyle" tools:targetApi="11">@style/Subtitle</item>

        <!--<item name="android:spinnerDropDownItemStyle">@style/App.Widget.DropDownItem.Spinner</item>-->

        <!-- Support library compatibility -->
	    <item name="background">@color/action_bar</item>
	    <item name="icon">@drawable/alogo</item>
	    <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse</item>
	    <item name="subtitleTextStyle">@style/Subtitle</item>
        <!--<item name="spinnerDropDownItemStyle">@style/App.Widget.DropDownItem.Spinner</item>-->

    </style>
    <style name="App.Widget.DropDownItem.Spinner" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/App.TextAppearance.Widget.DropDownItem</item>
    </style>
    <style name="App.TextAppearance.Widget.DropDownItem" parent="@android:TextAppearance.Small">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="DropDownNav" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_stylingactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_example</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_example</item>
    </style>

	<style name="Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle.Inverse">
		<item name="android:textColor">#ffffffff</item>
	</style>
	<style name="ConfirmDelete" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@color/confirm_delete</item>
		<item name="android:textColorPrimary">@color/confirm_delete_primary_color</item>
	</style>

	<style name="wrap">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="new_group_main" parent="wide">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="new_group" parent="wide">
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:background">@drawable/background_shadow</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_marginLeft">@dimen/group_padding</item>
		<item name="android:layout_marginRight">@dimen/group_padding</item>
	</style>
	<style name="new_group_item" parent="wide">
		<item name="android:layout_marginTop">0dp</item>
		<!--<item name="android:background">@drawable/background_shadow</item>-->
		<!--<item name="android:background">@android:drawable/list_selector_background</item>-->
		<item name="android:background">@drawable/list_selector</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:padding">10dp</item>
		<!--<item name="android:layout_marginLeft">@dimen/group_padding</item>-->
		<!--<item name="android:layout_marginRight">@dimen/group_padding</item>-->
	</style>
	<style name="new_group_item_rp" parent="wide">
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:background">@drawable/background_shadow</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:padding">10dp</item>
	</style>
	<style name="new_title" parent="wrap">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#888</item>
		<item name="android:layout_marginLeft">@dimen/group_padding</item>
		<item name="android:layout_marginRight">@dimen/group_padding</item>
		<item name="android:layout_marginTop">6dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:background">@null</item>
	</style>

	<style name="wrap_vertical" parent="wrap">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="wide" parent="wrap">
		<item name="android:layout_width">match_parent</item>
	</style>
	<style name="full" parent="wide">
		<item name="android:background">#FFeeeeee</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="add_entity_scroll" parent="full">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="add_entity_main" parent="full">
		<item name="android:padding">10dp</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="list_main" parent="full">
		<item name="android:orientation">vertical</item>
		<item name="android:paddingBottom">6dp</item>
	</style>
	<style name="add_entity_group2" parent="add_entity_group">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingTop">3dp</item>
		<item name="android:paddingBottom">3dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>
	<style name="add_entity_group" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="add_entity_group_wrap" parent="wrap">
		<item name="android:orientation">horizontal</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="add_entity_label" parent="wrap">
		<item name="android:layout_weight">1</item>
	</style>
	<style name="add_entity_edit" parent="wrap">
		<item name="android:layout_width">140dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:maxLength">50</item>
	</style>
	<style name="add_entity_edit_new" parent="add_entity_edit">
		<item name="android:layout_marginLeft">10dp</item>
	</style>
	<style name="add_entity_error" parent="wrap">
		<item name="android:textColor">#ff0000</item>
		<item name="android:visibility">gone</item>
	</style>
	<style name="add_entity_spinner" parent="wrap">
		<item name="android:layout_width">140dp</item>
	</style>
	<style name="add_entity_spinner_new" parent="add_entity_spinner">
		<item name="android:layout_marginLeft">10dp</item>
	</style>
	<style name="add_entity_spinner_new_short" parent="add_entity_spinner">
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_width">130dp</item>
	</style>
	<style name="add_entity_date" parent="wrap">
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
		<item name="android:background">@drawable/date</item>
	</style>
    <style name="select_car" parent="wrap">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/active</item>
    </style>
	<style name="add_entity_check" parent="wrap">
	</style>
	<style name="comment" parent="wide">
		<!--<item name="android:lines">4</item>-->
		<item name="android:maxLength">400</item>
	</style>

	<style name="log_fuel_item" parent="wide">
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="item_name_image" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>


	<style name="report_item" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>

		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="report_label" parent="wrap">
		<item name="android:layout_weight">1</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="report_label_small" parent="report_label">
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="newList" parent="full">
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0sp</item>
		<item name="android:listSelector">@android:color/transparent</item>
		<item name="android:layout_marginLeft">@dimen/group_padding</item>
		<item name="android:layout_marginRight">@dimen/group_padding</item>

	</style>

	<style name="logo">
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
	</style>

    <style name="circle">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/cirle</item>
        <item name="android:gravity">center</item>
    </style>
	<style name="divider" parent="wide">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginBottom">7dp</item>
		<item name="android:layout_marginLeft">12dp</item>
		<item name="android:layout_marginRight">12dp</item>
		<item name="android:background">#44555555</item>
	</style>
	<style name="rect">
		<item name="android:layout_width">7dp</item>
		<item name="android:layout_height">7dp</item>
		<item name="android:layout_margin">7dp</item>
	</style>

	<style name="filter_group" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>


	<style name="about_label" parent="wrap">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="about_value" parent="wrap">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#888</item>
	</style>
	<style name="about_value_link" parent="about_value">
		<item name="android:textColor">#FF50CDF5</item>
	</style>

    <style name="btn" parent="wrap">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:height">50dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
</resources>
