<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CarTheme"
           parent="@style/Theme.AppCompat.Light">
	    <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBar</item>
	    <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/abc_ic_ab_back_holo_dark</item>

	     <!-- Support library compatibility -->
	    <item name="actionBarStyle">@style/MyActionBar</item>
	    <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
	    <item name="android:background">#f3822c</item>
	    <item name="android:icon">@drawable/alogo</item>
	    <item name="android:titleTextStyle" tools:targetApi="11">@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse</item>
	    <item name="android:subtitleTextStyle" tools:targetApi="11">@style/Subtitle</item>

        <!-- Support library compatibility -->
	    <item name="background">@color/action_bar</item>
	    <item name="icon">@drawable/alogo</item>
	    <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse</item>
	    <item name="subtitleTextStyle">@style/Subtitle</item>
    </style>

	<style name="Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle.Inverse">
		<item name="android:textColor">#ffffffff</item>
	</style>
	<style name="ConfirmDelete" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@color/confirm_delete</item>
		<item name="android:textColorPrimary">@color/confirm_delete_primary_color</item>
	</style>

	<style name="wrap">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="wrap_vertical" parent="wrap">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="wide" parent="wrap">
		<item name="android:layout_width">match_parent</item>
	</style>
	<style name="full" parent="wide">
		<item name="android:background">#ffffff</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="add_entity_scroll" parent="full">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="add_entity_main" parent="full">
		<item name="android:padding">12dp</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="list_main" parent="full">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="add_entity_group" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="add_entity_label" parent="wrap">
		<item name="android:layout_weight">1</item>
	</style>
	<style name="add_entity_edit" parent="wrap">
		<item name="android:layout_width">180dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:maxLength">50</item>
	</style>
	<style name="add_entity_error" parent="wrap">
		<item name="android:textColor">#ff0000</item>
		<item name="android:visibility">gone</item>
	</style>
	<style name="add_entity_spinner" parent="wrap">
		<item name="android:layout_width">180dp</item>
	</style>
	<style name="add_entity_date" parent="wrap">
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
		<item name="android:background">@drawable/date</item>
	</style>
	<style name="add_entity_check" parent="wrap">
	</style>
	<style name="comment" parent="wide">
		<item name="android:lines">4</item>
		<item name="android:maxLength">400</item>
	</style>

	<style name="log_fuel_item" parent="wide">
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="item_name_image" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>

		<item name="android:gravity">center_vertical</item>
	</style>


	<style name="report_item" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>

		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="report_label" parent="wrap">
		<item name="android:layout_weight">1</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="report_label_small" parent="report_label">
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="logo">
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
	</style>
	<style name="divider" parent="wide">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginBottom">7dp</item>
		<item name="android:layout_marginLeft">12dp</item>
		<item name="android:layout_marginRight">12dp</item>
		<item name="android:background">#44555555</item>
	</style>
	<style name="rect">
		<item name="android:layout_width">7dp</item>
		<item name="android:layout_height">7dp</item>
		<item name="android:layout_margin">7dp</item>
	</style>

	<style name="filter_group" parent="wide">
		<item name="android:orientation">horizontal</item>
		<item name="android:padding">12dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">#55F4A113</item>
	</style>


	<style name="about_label" parent="wrap">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#888</item>
	</style>

	<style name="about_value" parent="wrap">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#888</item>
	</style>
	<style name="about_value_link" parent="about_value">
		<item name="android:textColor">#FF50CDF5</item>
	</style>
</resources>
