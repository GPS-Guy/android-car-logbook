<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  style="@style/log_fuel_item">
	<android.support.v7.widget.CardView
		app:cardUseCompatPadding="true"
		style="@style/card">
    <LinearLayout style="@style/new_group_item">

        <LinearLayout
            style="@style/wide"
            android:orientation="horizontal">

            <LinearLayout style="@style/circle">

                <ImageView
                    android:id="@+id/imgType"
                    style="@style/logo" />
            </LinearLayout>

            <LinearLayout
                style="@style/wrap_vertical"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/fuel"
					android:textColor="#555"
                    style="@style/wrap" />

                <TextView
                    android:textColor="@color/gal"
                    android:id="@+id/fuelValue"
                    style="@style/wrap" />
				<TextView
					android:id="@+id/rate"
					android:textColor="@color/divider"
					style="@style/wrap" />
            </LinearLayout>

            <LinearLayout style="@style/wrap_vertical" android:gravity="end">
                <TextView
                    android:id="@+id/date"
                    style="@style/wrap"
                    android:textColor="#ffaaaaaa"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/odometer"
                    style="@style/wrap" />
                <TextView
                    android:id="@+id/priceTotal"
                    android:textColor="@color/price"
                    style="@style/wrap" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>
