<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_name_image">

    <LinearLayout
        style="@style/new_group_item_rp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/circle"
            android:layout_marginRight="6dp">

            <ImageView
                android:id="@+id/logo"
                style="@style/logo"
                android:layout_margin="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            style="@style/wrap"
            android:layout_weight="1" />

        <LinearLayout
            style="@style/wrap_vertical"  android:gravity="end">
            <TextView
                android:id="@+id/valueMin"
                android:gravity="end"
                style="@style/wrap" />

            <TextView
                android:id="@+id/value"
                android:gravity="end"
                style="@style/wrap" />
            <TextView
                android:id="@+id/valueMax"
                android:gravity="end"
                style="@style/wrap" />
            <TextView
                android:id="@+id/valueAVG"
                android:gravity="end"
                style="@style/wrap" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>