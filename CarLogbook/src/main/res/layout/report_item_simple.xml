<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_name_image">

    <LinearLayout
        style="@style/new_group_item_rp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout style="@style/circle" android:layout_marginRight="6dp">

            <ImageView
                android:id="@+id/logo"
                style="@style/logo"
                android:layout_margin="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            style="@style/wrap"
            android:layout_weight="1" />

        <TextView
            android:gravity="end"
            android:id="@+id/value"
            style="@style/wrap" />

    </LinearLayout>
</LinearLayout>