<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_main">

    <LinearLayout style="@style/filter_group">

        <LinearLayout
            style="@style/new_group"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/wide"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fromLabel"
                    style="@style/wrap"
                    android:gravity="right"
                    android:minWidth="80dp" />

                <ImageButton
                    android:id="@+id/dateFrom"
                    style="@style/wrap"
                    android:background="@drawable/date" />

                <TextView
                    style="@style/wrap"
                    android:text=" - " />

                <TextView
                    android:id="@+id/toLabel"
                    style="@style/wrap"
                    android:gravity="right"
                    android:minWidth="80dp" />

                <ImageButton
                    android:id="@+id/dateTo"
                    style="@style/wrap"
                    android:background="@drawable/date" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/clear"
                style="@style/wrap"
                android:layout_marginLeft="7dp"
                android:background="@drawable/clean" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/list"
        style="@style/newList" />
</LinearLayout>